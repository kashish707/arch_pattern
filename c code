#include<stdio.h>
int main()
{
      int n;
      printf("Enter size\n");
      scanf("%d",&n);
      for(int i=1;i<=n;i++)
	{
		for(int j=1;j<=n-i;j++)
		printf(" ");
		for(int k=1;k<=2*i-1;k++)
		{
			if(i==n&&k==n)
			{
				for(int a=0;a<n;a++)
				printf("@");
				for(int a=0;a<n+2;a++)
				printf("*");
			}
			else if (k==(2*i-1)/2+1)
			{
				for(int m=1;m<=2*n+2;m++)
				printf(" ");
			}
			if(k<=(2*i-1)/2)
			printf("@");
			else printf("*");
		}
		printf("\n");
	}
	for(int i=1;i<n;i++)
	{
		for(int j=1;j<=i;j++)
		printf(" ");
		for(int k=1;k<=2*n-1-2*i;k++)
		{
			if(k==(2*n-1-2*i)/2+1)
			{
				for(int m=1;m<=2*n+2;m++)
				if(m==n)
				printf("*");
				else printf(" ");
			}
			if(k<=(2*n-1-2*i)/2)
			printf("@");
			else printf("*");
		}
		printf("\n");
	}
	for(int i=1;i<n;i++)
	{
		for(int k=1;k<=2*n-1;k++)
		{
			if(k==2*n-1)
			printf("*");
			else printf(" ");
		}
		for(int j=1;j<n+2;j++)
		{
			
		}
		printf("\n");
	}
	int c=0;
	for(int i=0;i<n;i++)
	{
		for(int l=0;l<n+c-1;l++)
		printf(" ");
		for(int l=0;l<n-c;l++)
		printf("*");
		c++;
		printf("\n");
	}
}
